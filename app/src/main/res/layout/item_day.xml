<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_right_image_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@id/number_of_day_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/number_of_day_text_view"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_of_day_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="DAY ONE"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/number_of_day_text_view"
        app:layout_constraintTop_toTopOf="@id/number_of_day_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="A very special journey"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/arrow_right_image_view"
        app:layout_constraintStart_toStartOf="@id/description_of_day_text_view"
        app:layout_constraintTop_toBottomOf="@id/description_of_day_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtitle_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Here we go!"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/arrow_right_image_view"
        app:layout_constraintStart_toStartOf="@id/title_text_view"
        app:layout_constraintTop_toBottomOf="@id/title_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number_of_day_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_blue_background"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>